<div style="@Style">
    @if (this.Visible)
    {
        @ChildContent
    }
</div>

@code {
    /// <summary>
    /// 模型Style
    /// </summary>
    [Parameter]
    public virtual string? Style { get; set; }
    /// <summary>
    /// 是否可见
    /// </summary>
    [Parameter]
    public virtual bool Visible { get; set; } = true;
    /// <summary>
    /// 子元素
    /// </summary>
    [Parameter]
    public virtual RenderFragment? ChildContent { get; set; }
}
